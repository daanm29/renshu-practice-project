<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Renshu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/pink_70</item>
        <item name="colorOnPrimaryContainer">@color/red_dark_80</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_light</item>
        <item name="colorOnSecondaryContainer">@color/blue_dark</item>

        <item name="colorTertiary">@color/pink_dark</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/pink_60</item>
        <item name="colorOnTertiaryContainer">@color/red_dark</item>

        <item name="colorError">@color/red_80</item>
        <item name="colorErrorContainer">@color/pink_65</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/red_dark_90</item>

        <item name="android:colorBackground">@color/white_80</item>
        <item name="colorOnBackground">@color/black_80</item>

        <item name="colorSurface">@color/white_80</item>
        <item name="colorOnSurface">@color/black_80</item>
        <item name="colorSurfaceVariant">@color/white_60</item>
        <item name="colorOnSurfaceVariant">@color/grey</item>

        <item name="colorOutline">@color/grey_light</item>

        <item name="colorOnSurfaceInverse">@color/white_70</item>
        <item name="colorSurfaceInverse">@color/grey_dark</item>

        <item name="android:shadowColor">@color/black</item>
        <item name="colorPrimaryInverse">@color/pink</item>

        <item name="android:forceDarkAllowed">false</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Renshu">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>
