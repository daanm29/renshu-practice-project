<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main Theme -->
    <style name="Theme.Renshu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/pink_70</item>
        <item name="colorOnPrimaryContainer">@color/red_dark_80</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_light</item>
        <item name="colorOnSecondaryContainer">@color/blue_dark</item>

        <item name="colorTertiary">@color/pink_dark</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/pink_60</item>
        <item name="colorOnTertiaryContainer">@color/red_dark</item>

        <item name="colorError">@color/red_80</item>
        <item name="colorErrorContainer">@color/pink_65</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/red_dark_90</item>

        <item name="android:colorBackground">@color/white_80</item>
        <item name="colorOnBackground">@color/black_80</item>

        <item name="colorSurface">@color/white_80</item>
        <item name="colorOnSurface">@color/black_80</item>
        <item name="colorSurfaceVariant">@color/white_60</item>
        <item name="colorOnSurfaceVariant">@color/grey</item>

        <item name="colorOutline">@color/grey_light</item>

        <item name="colorOnSurfaceInverse">@color/white_70</item>
        <item name="colorSurfaceInverse">@color/grey_dark</item>

        <item name="android:shadowColor">@color/black</item>
        <item name="colorPrimaryInverse">@color/pink</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <!-- Button -->
    <style name="CustomSelectableItemBackground">
        <item name="colorControlHighlight">@color/red</item>
    </style>

    <style name="CustomTextButton">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:theme">@style/CustomSelectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- CollapsingToolbar -->
    <style name="CustomCollapsingToolbar">
        <item name="android:elevation">4dp</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance</item>
        <item name="collapsedTitleTextColor">@color/white</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance</item>
        <item name="expandedTitleTextColor">@color/white</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ProgressBar -->
    <style name="CustomHorizontalProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:scaleY">2</item>
        <item name="android:progressTint">@color/red</item>
    </style>

    <style name="CustomExerciseProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:scaleY">2.5</item>
        <item name="android:progressTint">@color/red</item>
    </style>

    <!-- OssLicensesMenu -->
    <style name="CustomOssLicensesMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
</resources>
